<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper
	namespace="com.yh.svc.gov.test.springboot1.dao.PgAppSystemDao">
	<resultMap id="PgAppSystemResult"
		type="com.yh.svc.gov.test.springboot1.model.PgAppSystem">
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="pgAppSystemColumns">
	    <![CDATA[
	        	id as id,
	        	version as version,
	        	app_id as appId,
	        	lifecycle as lifecycle,
	        	operator as operator,
	        	create_time as createTime,
	        	last_modified_time as lastModifiedTime
	    ]]>
	</sql>
	<insert id="insert"
		parameterType="com.yh.svc.gov.test.springboot1.model.PgAppSystem"
		useGeneratedKeys="true" keyProperty="id" flushCache="true">
	    <![CDATA[
	        INSERT INTO
	        pg_app_system (
	        	version ,
	        	app_id ,
	        	lifecycle ,
	        	operator  
	        ) VALUES (
	        	#{version,javaType=java.lang.Integer,jdbcType=INTEGER} ,
	        	#{appId,javaType=java.lang.String,jdbcType=VARCHAR} ,
	        	#{lifecycle,javaType=java.lang.Boolean,jdbcType=BIT} ,
	        	#{operator,javaType=java.lang.String,jdbcType=VARCHAR} 
	        )
	    ]]>

	</insert>
	
	<update id="update"
		parameterType="com.yh.svc.gov.test.springboot1.model.PgAppSystem">
	    <![CDATA[
	        UPDATE pg_app_system SET
		        version = version + 1 ,
		        lifecycle = #{lifecycle,javaType=java.lang.Boolean,jdbcType=BIT} 
	        WHERE 
		        id = #{id}
		        AND version = #{version} 
	    ]]>
	</update>
	
	
	
	<select id="findById" parameterType="java.lang.Long"
		resultMap="PgAppSystemResult" flushCache="false">
		select
		<include refid="pgAppSystemColumns" />
		    <![CDATA[
			    from pg_app_system 
		        where 
		        id = #{id} 
		    ]]>
	</select>
	<select id="getByIds" parameterType="list"
		resultMap="PgAppSystemResult" flushCache="false">
		select
		<include refid="pgAppSystemColumns" />
		from pg_app_system
		where id in
		<foreach item="item" index="index" collection="list" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</select>
	<sql id="pgAppSystemDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>

			<if test="id!=null">
				and id = #{id}
			</if>

			<if test="version!=null">
				and version = #{version}
			</if>


			<if test="appId!=null and appId!=''">
				and app_id = #{appId}
			</if>


			<if test="lifecycle!=null">
				and lifecycle = #{lifecycle}
			</if>


			<if test="operator!=null and operator!=''">
				and operator = #{operator}
			</if>

			<if test="createTime!=null">
				and create_time = #{createTime}
			</if>

			<if test="lastModifiedTime!=null">
				and last_modified_time = #{lastModifiedTime}
			</if>
		</where>
	</sql>


	<select id="getCount" resultType="long">
		select count(*) from
		pg_app_system
	</select>
	<select id="findListCountByQueryMap" resultType="long">
		select count(*) from pg_app_system
		<include refid="pgAppSystemDynamicWhere" />
	</select>

	<select id="findListCountByParam" resultType="long">
		select count(*) from pg_app_system
		<include refid="pgAppSystemDynamicWhere" />
	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="findListByQueryMapWithPage"
		resultMap="PgAppSystemResult">
		select
		<include refid="pgAppSystemColumns" />
		from pg_app_system
		<include refid="pgAppSystemDynamicWhere" />

	</select>

	<select id="findListByQueryMap" resultMap="PgAppSystemResult">
		select
		<include refid="pgAppSystemColumns" />
		from pg_app_system
		<include refid="pgAppSystemDynamicWhere" />

	</select>

	<select id="findListByParam" resultMap="PgAppSystemResult">
		select
		<include refid="pgAppSystemColumns" />
		from pg_app_system
		<include refid="pgAppSystemDynamicWhere" />

	</select>

	<select id="getByAppId" resultMap="PgAppSystemResult"
		parameterType="java.lang.String">
		select
		<include refid="pgAppSystemColumns" />
	    <![CDATA[
	        from pg_app_system where app_id = #{appId}
	    ]]>
	</select>


</mapper>
